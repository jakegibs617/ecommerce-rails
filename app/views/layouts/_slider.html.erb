
<div class="slideshow hide-for-small-only hide-for-medium-only">

  <% @movies.each do |movie| %>
      <div >  <%= link_to image_tag(movie.poster, title: movie.title), movie_path(movie) %></div>
  <% end %>
</div>

<script type="text/javascript">
	$('.slideshow').slick({
	 slidesToShow: 6,
	  slidesToScroll: 1,
	  autoplay: true,
	  autoplaySpeed: 5000,
	});

</script>